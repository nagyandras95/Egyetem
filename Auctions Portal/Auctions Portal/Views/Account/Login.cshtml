@using Auctions_Portal.Models

@model LoginViewModel

@{
    ViewBag.Title = "Registartion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* megjeleníthetünk üzeneteket *@

@if (ViewBag.Error != null)
{
    <div class="failureNotification">@ViewBag.Error</div>
}

<h2>Regisztráció</h2>

<div class="contentBody">

    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <td colspan="2" valign="middle">
                    <div class="contentHead">
                        Bejelentkezési adatok:
                    </div>
                </td>
            </tr>
            <tr>
                <td width="120">
                    <table>
                        <tr>
                            <td valign="middle" height="24">
                                Felhasználó név:
                            </td>
                        </tr>
                        <tr>
                            <td valign="middle" height="24">
                                Jelszó:
                            </td>
                        </tr>
                    </table>
                </td>
                <td width="480">
                    <table width="480">
                        <tr>
                            <td>
                                @Html.TextBoxFor(log => log.UserName, new { size = "60" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.PasswordFor(log => log.Password)
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="right">
                    <input type="submit" value="Bejelentkezés" class="button" />
                </td>
            </tr>
        </table>
    }
</div>


