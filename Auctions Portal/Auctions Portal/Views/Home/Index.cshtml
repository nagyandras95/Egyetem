@using Auctions_Portal.Models;

@model List<Bidding>

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // megadjuk az elrendezést
}

@if (Model == null || Model.Count() == 0)
{
    <div class="contentText">Jelenleg nincs elérhető aukció.</div>
}
else
{
    <table>
        @* felsoroljuk az ajálatokat (egy sorban kettőt) *@
        @for (Int32 i = 0; i < (Model.Count + 1) / 2; i++)
        {
            <tr>
                @for (Int32 j = i * 2; j < i * 2 + 2 && j < Model.Count; j++)
                {
                    <td>
                        <table border="0" width="300">
                            <tr class="biddingItem">
                                <td>
                                    <div class="biddingItemHead">
                                        @Html.ActionLink(Model[j].Item.Name,"Details", new { biddingId = Model[j].ItemId })
                                    </div>
                                    <div class="biddingItemContent">
                                        <strong>Tárgy: </strong>@Model[j].Item.Name<br />
                                        <strong>Hírdető: </strong>@Model[j].Advetiser.Name<br />
                                        <strong>Leírás: </strong>@Model[j].Item.Description.Substring(0, Model[j].Item.Description.IndexOf(".") + 1) @* a kommentnek csak az első mondatát írjuk ki *@
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                }
            </tr>
        }
    </table>
}