@using Auctions_Portal.Models

@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* megjeleníthetünk üzeneteket *@

@if (ViewBag.Error != null)
{
    <div class="failureNotification">@ViewBag.Error</div>
}

<h2>Bejelentkezés</h2>

<div class="contentBody">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() // védelem XSRF támadás ellen

        <table>
            <tr>
                <td colspan="2">
                    <div class="failureNotification">@ViewBag.Information</div>
                    <div class="failureNotification">@Html.ValidationSummary(true, "A bejelentkezés sikertelen!")</div>
                </td>
            </tr>
            <tr>
                <td colspan="2" valign="middle">
                    <div class="contentHead">
                        Bejelentkezési adatok:
                    </div>
                </td>
            </tr>
            <tr>
                <td width="120">
                    Felhasználónév:
                </td>
                <td class="failureNotificationSmall">
                    @Html.EditorFor(log => log.UserName)
                </td>
            </tr>
            <tr>
                <td width="120">
                    Jelszó:
                </td>
                <td class="failureNotificationSmall">
                    @Html.EditorFor(log => log.Password)
                </td>
            </tr>
            <tr>
                <td width="120"></td>
                <td>
                    @Html.CheckBoxFor(log => log.RememberLogin) Bejelentkezés megjegyzése
                </td>
            </tr>
            <tr>
                <td colspan="2" height="50">
                    <input type="submit" value="Bejelentkezés" class="button" />
                </td>
            </tr>
        </table>
    }
</div>


