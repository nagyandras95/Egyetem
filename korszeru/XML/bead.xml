<xsl:template match="/">
  <html>
  <body>
      
      <ul>
        <xsl:for-each select="bookstore/book">
        <xsl:sort select="year"/>
        <li> <xsl:for-each select="author">
              <book><xsl:value-of select="." /></book> 
            </xsl:for-each> :
            <xsl:value-of select="title" />
            (<xsl:value-of select="year" />), 
            price: $<xsl:value-of select="price" /> </li>
